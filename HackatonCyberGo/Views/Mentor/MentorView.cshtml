
@{
    ViewBag.Title = "Страница ментора";
}



<div class="container">
    <div class="row">
        <div class="col-md-4">
            <br />
            <h4>Команды: </h4>
            <p>
                <div class="list-group">


                    @{
                        int count = 0;
                        foreach (var x in ViewBag.Problems)
                        {

                            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start
                       @if (count == 0)
                       {
                           @Html.Raw("active")
                       }">


                    <p class="mb-1">@x.Name</p>


                    <small>
                        Статус:
                        @if (count == 0)
                        {
                            @Html.Raw("70%")
                        }
                        else
                        {
                            @Html.Raw("выполнено")
                        }
                    </small></a>
                    count++;
                }
                    }
                </div>
                </p>
            </div>
    <div class="col-md-4">
        <br />
        <h4>Участники: </h4>

        <div>
            <div>
                <img src="@Url.Content("~/Images/cat1.jpg")" width="40" height="40" class="img-circle" alt="Cinque Terre" />

                <div style="width:120px">Андреев Сергей Васильевич</div>
                <p>студент 3 курса</p>
                <p> Прогресс в выполнении задач: </p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                </div>
            </div>
            @Html.ActionLink("Исключить", "Empty", "Home", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Перейти в Trello", "Empty", null, "Home", new { @class = "btn btn-primary " })
        </div>
        <br />
        <div>
            <div>
                <img src="@Url.Content("~/Images/cat2.jpg")" width="40" height="40" class="img-circle" alt="Cinque Terre" />

                <div style="width:120px">Мамонов Игорь Николаевич</div>
                <p>студент 4 курса</p>
                <p> Прогресс в выполнении задач: </p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">30%</div>
                </div>
            </div>
            @Html.ActionLink("Исключить", "Empty", "Home", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Перейти в Trello", "Empty", "Home", null, new { @class = "btn btn-primary " })
        </div>
    </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                  
                    <br />
                    <h4>Заявки: </h4>
                    <div>
                        <div>
                            <img src="@Url.Content("~/Images/w_3c03680c.jpg")" width="40" height="40" class="img-circle" alt="Cinque Terre" />

                            <div style="width:120px">Семёнов Петр Витальевич</div>
                            <p>студент 2 курса</p>
                          
                        </div>
                        @Html.ActionLink("Принять", "Empty", "Home", null, new { @class = "btn btn-success" })
                        @Html.ActionLink("Отклонить", "Empty", null, "Home", new { @class = "btn btn-danger " })
                    </div>
                </div>
            </div>
        </div>
        </div>

